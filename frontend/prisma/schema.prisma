generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String    @default("")  // Ensure this matches the schema
  role      UserRole  @default(USER)
  phone     String?
  address   String?
  shipments Shipment[]
}

model Shipment {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  fromCountry   String
  toCountry     String
  length        Float
  width         Float
  height        Float
  weight        Float
  status        ShipmentStatus @default(PENDING)
  trackingNumber String?   @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum ShipmentStatus {
  PENDING
  IN_TRANSIT
  DELIVERED
  CANCELLED
}